{
  "name": "ng-toolkit",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start-samples": "npm run build-lib && ng serve -- --port 4400",
    "build-lib": "ng build ng-toolkit-lib",
    "build-lib:prod": "ng build ng-toolkit-lib --configuration production",
    "build-samples": "ng build ng-toolkit",
    "build-samples:prod": "ng build ng-toolkit --configuration production",
    "test-lib": "ng test ng-toolkit-lib",
    "test-lib:prod": "ng test ng-toolkit-lib --browsers=ChromeHeadless --watch=false --code-coverage",
    "test-samples": "ng test ng-toolkit",
    "test-samples:prod": "ng test ng-toolkit --browsers=ChromeHeadless --watch=false",
    "e2e": "npm run build-lib:prod && ng e2e",
    "publish-lib": "npm run test-lib:prod && npm run build-lib:prod && cd dist/ng-toolkit-lib/ && npm publish"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.2.5",
    "@angular/cdk": "^12.2.13",
    "@angular/common": "~13.2.5",
    "@angular/compiler": "~13.2.5",
    "@angular/core": "~13.2.5",
    "@angular/forms": "~13.2.5",
    "@angular/platform-browser": "~13.2.5",
    "@angular/platform-browser-dynamic": "~13.2.5",
    "@angular/router": "~13.2.5",
    "bootstrap": "^5.0.0-beta2",
    "rxjs": "~6.6.3",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.2.5",
    "@angular/cli": "~13.2.5",
    "@angular/compiler-cli": "~13.2.5",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^13.2.1",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.5.5"
  }
