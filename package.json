{
  "name": "ng-toolkit",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start-samples": "npm run build-lib && ng serve --port 4400",
    "build-lib": "ng build ng-toolkit-lib",
    "build-lib:prod": "ng build ng-toolkit-lib --configuration production",
    "build-cli": "cd projects/ng-toolkit-cli && npm run build",
    "build-cli:prod": "cd projects/ng-toolkit-cli && npm run build:prod",
    "build-samples": "ng build ng-toolkit",
    "build-samples:prod": "ng build ng-toolkit --configuration production",
    "lint-samples": "ng lint ng-toolkit",
    "lint-lib": "ng lint ng-toolkit-lib",
    "test-lib": "ng test ng-toolkit-lib",
    "test-lib:prod": "ng test ng-toolkit-lib --browsers=ChromeHeadless --watch=false",
    "test-samples": "ng test ng-toolkit",
    "test-samples:prod": "ng test ng-toolkit --browsers=ChromeHeadless --watch=false",
    "e2e": "npm run build-lib:prod && ng e2e",
    "publish-lib": "npm run test-lib:prod && npm run build-lib:prod && cd dist/ng-toolkit-lib/ && npm publish",
    "publish-cli": "npm run build-cli:prod && cd dist/ng-toolkit-cli && npm publish",
    "export-translations": "node dist/ng-toolkit-cli export-translations --input=src/app/docs/translation/samples/translation-sample/translations --langs=en,de --modules=translated --output=src/app/docs/translation/samples/translation-sample/translations",
    "import-translations": "node dist/ng-toolkit-cli import-translations --input=src/app/docs/translation/samples/translation-sample/translations --langs=en,de --modules=translated --output=src/app/docs/translation/samples/translation-sample/translations && prettier --write src/app/docs/translation/samples/translation-sample/translations/*/*.ts"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.12",
    "@angular/cdk": "^16.2.12",
    "@angular/common": "^16.2.12",
    "@angular/compiler": "^16.2.12",
    "@angular/core": "^16.2.12",
    "@angular/forms": "^16.2.12",
    "@angular/platform-browser": "^16.2.12",
    "@angular/platform-browser-dynamic": "^16.2.12",
    "@angular/router": "^16.2.12",
    "bootstrap": "5.0.0-beta2",
    "rxjs": "^6.6.7",
    "tslib": "^2.4.0",
    "zone.js": "^0.13.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.10",
    "@angular-eslint/builder": "16.3.1",
    "@angular-eslint/eslint-plugin": "16.3.1",
    "@angular-eslint/eslint-plugin-template": "16.3.1",
    "@angular-eslint/schematics": "16.3.1",
    "@angular-eslint/template-parser": "16.3.1",
    "@angular/cli": "^16.2.10",
    "@angular/compiler-cli": "^16.2.12",
    "@types/jasmine": "^3.6.11",
    "@types/jasminewd2": "^2.0.10",
    "@types/node": "^12.20.55",
    "@typescript-eslint/eslint-plugin": "5.11.0",
    "@typescript-eslint/parser": "5.11.0",
    "eslint": "^8.21.0",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsdoc": "latest",
    "eslint-plugin-prefer-arrow": "latest",
    "jasmine-core": "~3.10.1",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "^4.0.2",
    "karma-jasmine-html-reporter": "^1.7.0",
    "ng-packagr": "^16.2.3",
    "prettier": "^2.8.3",
    "protractor": "~7.0.0",
    "ts-node": "~10.4.0",
    "typescript": "~4.9.5"
  }
}
