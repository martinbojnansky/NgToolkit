{
  "name": "ng-toolkit",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start-samples": "npm run build-lib && ng serve -- --port 4400",
    "build-lib": "ng build ng-toolkit-lib",
    "build-lib:prod": "ng build ng-toolkit-lib --configuration production",
    "build-cli": "cd projects/ng-toolkit-cli && npm run build",
    "build-cli:prod": "cd projects/ng-toolkit-cli && npm run build:prod",
    "build-samples": "ng build ng-toolkit",
    "build-samples:prod": "ng build ng-toolkit --configuration production",
    "lint-samples": "ng lint ng-toolkit",
    "lint-lib": "ng lint ng-toolkit-lib",
    "test-lib": "ng test ng-toolkit-lib",
    "test-lib:prod": "ng test ng-toolkit-lib --browsers=ChromeHeadless --watch=false",
    "test-samples": "ng test ng-toolkit",
    "test-samples:prod": "ng test ng-toolkit --browsers=ChromeHeadless --watch=false",
    "e2e": "npm run build-lib:prod && ng e2e",
    "publish-lib": "npm run test-lib:prod && npm run build-lib:prod && cd dist/ng-toolkit-lib/ && npm publish",
    "publish-cli": "npm run build-cli:prod && cd projects/ng-toolkit-cli && npm publish",
    "translate": "node dist/ng-toolkit-cli export-translations --input=src/app/docs/translation/samples/translation-sample/translations --langs=en,de --modules=translated --output=dist/translations"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.1.1",
    "@angular/cdk": "^12.2.13",
    "@angular/common": "^14.1.1",
    "@angular/compiler": "^14.1.1",
    "@angular/core": "^14.1.1",
    "@angular/forms": "^14.1.1",
    "@angular/platform-browser": "^14.1.1",
    "@angular/platform-browser-dynamic": "^14.1.1",
    "@angular/router": "^14.1.1",
    "bootstrap": "5.0.0-beta2",
    "rxjs": "^6.6.7",
    "tslib": "^2.4.0",
    "zone.js": "^0.11.7"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.1.1",
    "@angular-eslint/builder": "14.0.2",
    "@angular-eslint/eslint-plugin": "14.0.2",
    "@angular-eslint/eslint-plugin-template": "14.0.2",
    "@angular-eslint/schematics": "14.0.2",
    "@angular-eslint/template-parser": "14.0.2",
    "@angular/cli": "^14.1.1",
    "@angular/compiler-cli": "^14.1.1",
    "@types/jasmine": "^3.6.11",
    "@types/jasminewd2": "^2.0.10",
    "@types/node": "^12.20.55",
    "@typescript-eslint/eslint-plugin": "5.11.0",
    "@typescript-eslint/parser": "5.11.0",
    "eslint": "^8.21.0",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsdoc": "latest",
    "eslint-plugin-prefer-arrow": "latest",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "^4.0.2",
    "karma-jasmine-html-reporter": "^1.7.0",
    "ng-packagr": "^14.1.0",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "typescript": "~4.7.4"
  }
}
